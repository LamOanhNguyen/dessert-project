<div class="row">
  <aside class="col-md-3 categories-list">
    <div id="main-menu">
      <div class="list-group panel">
        <% @categories.each do |category| %>
          <%= content_tag :div, "", class: "list-group-item list-group-item-default" do %>
            <%= category.name %>
            <%= link_to content_tag(:i, "", class: "fa fa-times pull-right"),
              admin_category_path(category), method: :delete, class: "text-danger" %>
            <%= link_to "", admin_category_path(category),
              class: "fa fa-edit pull-right", remote: true %>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= link_to t("category.new"), new_admin_category_path, class: "btn btn-success full-width-button", remote: true %>
  </aside>
  
  <div class="col-md-5 col-md-offset-1">
    <h2 id="title"></h2>
    <div id="category_edit_new">
    </div>
  </div>
</div>
