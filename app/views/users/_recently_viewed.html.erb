<tr class="product-in-cart">
  <td class="w15">
    <%= link_to image_tag(product.image.url, alt: t("alt.product_image"),
      class: "img-responsive"), product %>
  </td>
  <td class="w45">
    <b><%= link_to product.name, product %></b>
    <p><%= product.description %></p>
  </td>
  <td class="w15">
    <p><%= number_to_currency product.price %></p>
  </td>
</tr>
