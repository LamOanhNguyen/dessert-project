<%= form_for ([@comment.product, @comment]) do |f| %>
  <label class="col-sm-2 control-label">Comment</label>
  <div class="col-sm-10">
    <%= f.text_area :content, placeholder: "New comment...", rows: 5, class: 'form-control' %>
  </div>

  <div class="col-sm-offset-2 col-sm-3">
      <%= f.submit "Submit comment", class: "btn btn-success btn-circle text-uppercase" do %>
        <span class="glyphicon glyphicon-send"></span>
      <% end %>
  </div>
  <div class= "col-sm-7"><br></br></div>
<% end %>